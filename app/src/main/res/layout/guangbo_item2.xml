<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/item2_imageView"
        android:padding="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        />
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:src="@mipmap/fm_pause"
        />
    <LinearLayout

        android:padding="5dp"
        android:layout_toRightOf="@id/item2_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/item2_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广播台"
            android:textSize="18dp"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在直播："
                android:textSize="15dp"
                android:textColor="#A3A3A3"
                />
            <TextView
                android:id="@+id/item2_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播啥"
                android:textSize="15dp"
                android:maxEms="15"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#A3A3A3"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <ImageView
                android:gravity="center_vertical"
                android:id="@+id/image"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_item_playtimes_count"
                />
            <TextView
                android:id="@+id/item2_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="多少人"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="#A3A3A3"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>